    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.16",
    "lint-staged": "^15.2.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.2.2",
