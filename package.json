{
  "name": "mhw-board-companion",
  "main": "expo-router/entry",
  "version": "1.0.1",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "yarn run eslint",
    "eslint:all": "eslint .",
    "eslint:fix": "eslint --fix",
    "pretty": "pretty-quick --staged",
    "prepare": "husky install",
    "check-types": "tsc --noEmit --pretty",
    "prettier:fix": "prettier --write \"./**/*.{ts,tsx}\"",
    "publish-ota": "npx eas-cli update --branch production -p all",
    "publish-ota-dev": "npx eas-cli update --branch development -p all",
    "publish-ota-preview": "npx eas-cli update --branch preview -p all",
    "build:apk": "npx eas-cli build -p android --profile='preview' --non-interactive",
    "build:web": "expo export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
